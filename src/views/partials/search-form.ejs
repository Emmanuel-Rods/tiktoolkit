
<div class="w-full max-w-md mx-auto animate-fade-in">
  <form action="/search" method="POST" class="position-relative">
    <div class="input-group">
      <span class="input-group-text dark-glass border-0 text-gray-400">
        <i class="bi bi-search"></i>
      </span>
      <input 
        type="text" 
        name="username"
        class="form-control dark-glass border-0 text-white" 
        placeholder="Enter TikTok username" 
        aria-label="TikTok username"
        <%= isLoading ? 'disabled' : '' %>
      >
      <button 
        type="submit" 
        class="btn tiktok-gradient text-white"
        <%= isLoading ? 'disabled' : '' %>
      >
        <%= isLoading ? 'Searching...' : 'Search' %>
      </button>
    </div>
  </form>
  <p class="mt-2 text-xs text-center text-gray-500">
    Example: adilet.sw, khaby.lame, charlidamelio
  </p>
</div>
