
<div class="w-full max-w-md mx-auto mb-4 animate-scale-in">
  <div class="glass-card overflow-hidden">
    <div class="bg-gradient-to-r from-tiktok-blue to-tiktok-pink h-16"></div>
    <div class="px-4 pb-4 position-relative">
      <div class="position-absolute" style="top: -32px; left: 50%; transform: translateX(-50%);">
        <div class="rounded-circle bg-white p-1 shadow-sm" style="width: 80px; height: 80px;">
          <div class="rounded-circle bg-tiktok-gray d-flex align-items-center justify-content-center" style="width: 100%; height: 100%;">
            <i class="bi bi-person-fill" style="font-size: 2rem; color: #777;"></i>
          </div>
        </div>
      </div>
      
      <div class="mt-5 text-center">
        <h2 class="text-xl font-bold text-white">@<%= userInfo.username %></h2>
        <p class="text-sm text-gray-400 mt-1"><%= userInfo.subtitle %></p>
        
        <div class="d-flex justify-content-center mt-4 gap-4">
          <div class="text-center">
            <p class="stat-value"><%= stats.following %></p>
            <p class="stat-label">
              <i class="bi bi-people-fill me-1"></i> Following
            </p>
          </div>
          
          <div class="text-center">
            <p class="stat-value"><%= stats.followers %></p>
            <p class="stat-label">
              <i class="bi bi-people-fill me-1"></i> Followers
            </p>
          </div>
          
          <div class="text-center">
            <p class="stat-value"><%= stats.likes %></p>
            <p class="stat-label">
              <i class="bi bi-heart-fill me-1"></i> Likes
            </p>
          </div>
        </div>
        
        <div class="mt-3 d-flex justify-content-center gap-2">
          <span class="profile-chip bg-tiktok-blue bg-opacity-25 text-tiktok-blue">TikTok Creator</span>
          <span class="profile-chip tiktok-gradient text-white"><%= stats.followers %> Followers</span>
        </div>
      </div>
    </div>
  </div>
</div>
